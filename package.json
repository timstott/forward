{
  "name": "forward",
  "version": "1.0.0",
  "license": "MIT",
  "dependencies": {
    "lodash": "^4.17.4",
    "tslib": "^1.9.0",
    "winston": "^2.3.1"
  },
  "description": "Forward Twilio SMS to email with AWS Lambda/API Gateway/SES",
  "repository": {
    "type": "git",
    "url": "https://github.com/timstott/forward"
  },
  "devDependencies": {
    "@types/aws-lambda": "^0.0.16",
    "@types/jest": "^20.0.6",
    "@types/lodash": "^4.14.71",
    "@types/node": "^8.0.19",
    "@types/winston": "^2.3.4",
    "aws-sdk": "^2.94.0",
    "jest": "^22.0.4",
    "serverless": "^1.24.0",
    "serverless-webpack": "^3.1.0",
    "ts-jest": "^22.0.1",
    "ts-loader": "^3.3.0",
    "tslint": "^5.6.0",
    "typescript": "^2.6.2",
    "webpack": "^3.0.0"
  },
  "scripts": {
    "lint": "tslint src/**/*.ts test/**/*.ts",
    "build": "serverless webpack --stage production",
    "test": "jest",
    "deploy": "serverless deploy --stage production --conceal"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**.ts",
      "!src/types.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "test/.*\\.ts$"
  }
}
